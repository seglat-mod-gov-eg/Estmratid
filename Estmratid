    <script>
        // Simulate Cloudflare delay
        window.onload = function() {
            setTimeout(() => {
                document.getElementById('cloudflare-overlay').style.display = 'none';
                document.getElementById('main-content').classList.remove('hidden');
            }, 3000); // 3 seconds delay
        };

        // Mock Database for simulation
        // The real implementation would check for actual files on the server
        const mockDatabase = {
            "s25": ["29908282103835"],
            "s75": ["12345678901234"],
            "s7": ["98765432109876"]
        };

        function handleFormSelect() {
            const val = document.getElementById('formType').value;
            const section = document.getElementById('nationalIdSection');
            const actionButtons = document.getElementById('actionButtons');
            const nationalIdInput = document.getElementById('nationalId');
            
            if(val) {
                section.classList.remove('hidden');
                document.getElementById('btnFormType').innerText = val.toUpperCase();
                nationalIdInput.focus();
            } else {
                section.classList.add('hidden');
                actionButtons.classList.add('hidden');
            }
            checkNationalId();
        }

        function checkNationalId() {
            const id = document.getElementById('nationalId').value;
            const type = document.getElementById('formType').value;
            const statusIcon = document.getElementById('statusIcon');
            const actionButtons = document.getElementById('actionButtons');
            const errorMsg = document.getElementById('errorMsg');

            if (id.length === 14) {
                // Here we simulate checking for file.png or file.jpg based on National ID
                // In your real server, this would be an AJAX call or checking physical path
                if (mockDatabase[type] && mockDatabase[type].includes(id)) {
                    statusIcon.classList.remove('hidden');
                    actionButtons.classList.remove('hidden');
                    errorMsg.classList.add('hidden');
                } else {
                    statusIcon.classList.add('hidden');
                    actionButtons.classList.add('hidden');
                    errorMsg.classList.remove('hidden');
                }
            } else {
                statusIcon.classList.add('hidden');
                actionButtons.classList.add('hidden');
                errorMsg.classList.add('hidden');
            }
        }

        function previewImage() {
            const id = document.getElementById('nationalId').value;
            // Assuming image path is local relative to the server
            // Path: [NationalID].jpg
            const imagePath = `${id}.jpg`;
            
            document.getElementById('formPreviewImg').src = imagePath;
            document.getElementById('previewModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('previewModal').classList.add('hidden');
        }

        function printForm() {
            const id = document.getElementById('nationalId').value;
            const imagePath = `${id}.jpg`;
            const printImg = document.getElementById('image-to-print');
            
            printImg.src = imagePath;
            
            // Allow time for image to load before printing
            printImg.onload = function() {
                window.print();
            };
        }
    </script>
</body>
